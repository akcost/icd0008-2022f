@page
@using Domain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Pages.CheckersGames.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CheckersGame</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckersGame.GameName" class="control-label"></label>
                <input asp-for="CheckersGame.GameName" class="form-control"/>
                <span asp-validation-for="CheckersGame.GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.StartedAt" class="control-label"></label>
                <input asp-for="CheckersGame.StartedAt" class="form-control"/>
                <span asp-validation-for="CheckersGame.StartedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player1Name" class="control-label"></label>
                <input asp-for="CheckersGame.Player1Name" class="form-control"/>
                <span asp-validation-for="CheckersGame.Player1Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player1Type" class="control-label"></label>
                <select asp-for="CheckersGame.Player1Type" asp-items="Html.GetEnumSelectList<EPlayerType>()" class="form-select"></select>
                <span asp-validation-for="CheckersGame.Player1Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player2Name" class="control-label"></label>
                <input asp-for="CheckersGame.Player2Name" class="form-control"/>
                <span asp-validation-for="CheckersGame.Player2Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.Player2Type" class="control-label"></label>
                <select asp-for="CheckersGame.Player2Type" asp-items="Html.GetEnumSelectList<EPlayerType>()" class="form-select"></select>
                <span asp-validation-for="CheckersGame.Player2Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.CheckersOptionId" class="control-label"></label>
                <select asp-for="CheckersGame.CheckersOptionId" class="form-control" asp-items="ViewBag.CheckersOptionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}